  <div class="modal" tabindex="-1" style="display:block">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">@Heading</h5>
        <button @onclick="CencelButton" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" ></button>
      </div>
      <div class="modal-body">
        <p>@message</p>
      </div>
      <div class="modal-footer">
        <RadzenButton  style="background-color:blue" Click="SubmitButton"  Text="OK" ButtonStyle="ButtonStyle.Primary"/>
        <RadzenButton   Click="CencelButton"  style="background-color:blue" Text="Cancel" ButtonStyle="ButtonStyle.Primary"/>
      </div>
    </div>
  </div>
</div>

@code {
  [Parameter]
  public EventCallback onSubmitButton { get; set; }
    
  [Parameter]
  public EventCallback onCancelButton { get; set; }
    
  [Parameter]
  public string message { get; set; }
  
  [Parameter]
  public string Heading { get; set; }
    
  protected async Task SubmitButton()
  {
    await onSubmitButton.InvokeAsync();
    
  }
    
  protected async Task CencelButton()
  {
    await onCancelButton.InvokeAsync();
  }
}